source 'https://rubygems.org'

# WebSocket provider
gem 'wamp_client'
# In-memory scheduler for running jobs on intervals
gem 'rufus-scheduler'
# Simple network API
gem 'httparty'
gem 'eventmachine'

# API wrappers for transit agencies
gem 'bart_api', :git => 'https://github.com/propershark/bart_api.git'

# Option parsing for CLIs
gem 'trollop'

group :development do
  gem 'pry'
  gem 'pry-byebug'
end
